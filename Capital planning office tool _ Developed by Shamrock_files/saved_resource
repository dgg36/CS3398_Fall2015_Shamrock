@-moz-document url-prefix() { 
	.wp-emoji-rolleyes {
		letter-spacing: -.2em;
	}

	.wp-emoji-oops, .wp-emoji-idea, .wp-emoji-confused {
		letter-spacing: -.25em;
	}

	.wp-emoji-burrito, .wp-emoji-arrow, .wp-emoji-bear, .wp-emoji-star {
		letter-spacing: -.3em;
	}

	.wp-emoji-developer, .wp-emoji-mrgreen, .wp-emoji-facepalm {
		letter-spacing: -.35em;
	}

}




